<?xml version="1.0" encoding="utf-8"?>
<!-- Cyberpunk-inspired top pipe drawable -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main pipe body with neon gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/first_color"
                android:centerColor="@color/second_color"
                android:endColor="@color/third_color"
                android:angle="45" />
        </shape>
    </item>

    <!-- Circuit-like noise texture -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/start_texture_color"
                android:centerColor="@color/center_texture_color"
                android:endColor="@color/start_texture_color"
                android:angle="135" />
        </shape>
    </item>

    <!-- Dynamic highlight with circuit line effect -->
    <item android:left="8dp" android:right="32dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/texture_highlight" />
        </shape>
    </item>

    <!-- Glowing rim with digital gradient -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <size android:height="24dp" />
            <gradient
                android:startColor="@color/first_color"
                android:centerColor="@color/third_color"
                android:endColor="@color/second_color"
                android:angle="90" />
        </shape>
    </item>

    <!-- Digital highlight overlay -->
    <item android:bottom="2dp" android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/texture_overlay" />
        </shape>
    </item>

    <!-- Shadow with digital distortion -->
    <item android:bottom="20dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_distortion" />
        </shape>
    </item>

    <!-- Edge shadow with digital glitch effect -->
    <item android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/shadow_start"
                android:centerColor="@color/shadow_center"
                android:endColor="@color/shadow_end"
                android:angle="0" />
        </shape>
    </item>

    <!-- Edge digital highlight -->
    <item android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#50FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="0" />
        </shape>
    </item>
</layer-list>