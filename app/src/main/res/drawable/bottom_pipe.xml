<?xml version="1.0" encoding="utf-8"?>
<!-- Cyberpunk-inspired bottom pipe drawable -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main pipe body with neon gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/first_color"
                android:centerColor="@color/second_color"
                android:endColor="@color/third_color"
                android:angle="45" />
        </shape>
    </item>

    <!-- Circuit-like noise texture -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/start_texture_color"
                android:centerColor="@color/center_texture_color"
                android:endColor="@color/start_texture_color"
                android:angle="135" />
        </shape>
    </item>

    <!-- Dynamic highlight with circuit line effect -->
    <item android:left="8dp" android:right="32dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/texture_highlight" />
        </shape>
    </item>

    <!-- Glowing rim with digital gradient (flipped orientation) -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <size android:height="24dp" />
            <gradient
                android:startColor="@color/first_color"
                android:centerColor="@color/second_color"
                android:endColor="@color/third_color"
                android:angle="270" />
        </shape>
    </item>

    <!-- Digital highlight overlay (flipped position) -->
    <item android:top="2dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/texture_overlay" />
        </shape>
    </item>

    <!-- Shadow with digital distortion (flipped position) -->
    <item android:top="20dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_distortion" />
        </shape>
    </item>

    <!-- Edge shadow with digital glitch effect (flipped) -->
    <item android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/shadow_center"
                android:endColor="@color/shadow_end"
                android:angle="0" />
        </shape>
    </item>

    <!-- Edge digital highlight (flipped) -->
    <item android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/texture_highlight"
                android:centerColor="@color/texture_overlay"
                android:endColor="@color/start_texture_color"
                android:angle="0" />
        </shape>
    </item>
</layer-list>