<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/title</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Set a background for the splash screen -->
        <item name="android:windowBackground">@color/dialog_background</item>

        <!-- Optional: Make the status bar transparent -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Optional: Fullscreen splash screen -->
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject" />
</resources>